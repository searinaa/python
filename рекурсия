#функция вычисляет сумму через рекурсию
def summa(n):
    if n // 10 == 0:
        return n 
    return n % 10 + summa(n // 10)
    

print(summa(107))

#функция печатает в обратном порядке число с пробелами между ними
def divide(n):
    if n // 10 == 0:
        return n 
    print(n % 10, end=' ')
    return divide(n // 10)
    

print(divide(179))
